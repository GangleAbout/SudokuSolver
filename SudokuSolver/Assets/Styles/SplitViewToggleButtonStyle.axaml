<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="ToggleButton PathIcon.Default">
        <Setter Property="IsVisible" Value="True" />
    </Style>
    <Style Selector="ToggleButton PathIcon.CompactedPointerOver">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="ToggleButton PathIcon.ExtendedPointerOver">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="ToggleButton:pointerover PathIcon.Default">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="ToggleButton:pointerover PathIcon.CompactedPointerOver">
        <Setter Property="IsVisible" Value="True" />
    </Style>
    <Style Selector="ToggleButton:checked:pointerover PathIcon.Default">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="ToggleButton:checked:pointerover PathIcon.CompactedPointerOver">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="ToggleButton:checked:pointerover PathIcon.ExtendedPointerOver">
        <Setter Property="IsVisible" Value="True" />
    </Style>
</Styles>